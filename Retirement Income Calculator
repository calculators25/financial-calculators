  <script>
    function fmt(v){return '$' + Number(v).toLocaleString(undefined,{minimumFractionDigits:2,maximumFractionDigits:2})}

    document.getElementById('retireForm').addEventListener('submit', function(e){
      e.preventDefault();

      const startBalance = parseFloat(document.getElementById('currentBalance').value) || 0;
      const annualReturn = parseFloat(document.getElementById('annualReturn').value) / 100 || 0;
      const withdrawal = parseFloat(document.getElementById('annualWithdrawal').value) || 0;
      const pension = parseFloat(document.getElementById('pensionIncome').value) || 0;
      const maxYears = parseInt(document.getElementById('maxYears').value) || 100;

      if(startBalance <= 0){ alert('Enter a positive starting balance.'); return; }
      if(withdrawal <= 0){ alert('Enter a positive annual withdrawal.'); return; }

      const projBody = document.getElementById('projBody'); projBody.innerHTML = '';

      let balance = startBalance;
      let years = 0;
      let depleted = false;

      for(let y=1;y<=maxYears;y++){
        const start = balance;
        const interest = start * annualReturn; // interest during year
        const startAfterInterest = start + interest;
        const netWithdrawal = withdrawal - pension; // if pension >= withdrawal, netWithdrawal <=0 (balance grows)
        const end = startAfterInterest - netWithdrawal;

        // append row
        const tr = document.createElement('tr');
        tr.innerHTML = `<td>${y}</td><td>${fmt(start)}</td><td>${fmt(interest)}</td><td>${fmt(pension)}</td><td>${fmt(withdrawal)}</td><td>${fmt(Math.max(end,0))}</td>`;
        projBody.appendChild(tr);

        years = y;

        if(end <= 0){
          // compute fractional year used: fraction = startAfterInterest / netWithdrawal
          let fraction = 0;
          if(netWithdrawal > 0){ fraction = startAfterInterest / netWithdrawal; }
          else { fraction = maxYears - (y-1); } // if netWithdrawal <=0, never depletes

          const totalYears = (y-1) + Math.min(1, fraction);
          document.getElementById('yearsResult').textContent = totalYears.toFixed(2) + ' years';
          document.getElementById('yearsRounded').textContent = Math.floor(totalYears) + ' years';
          depleted = true;
          break;
        }

        balance = end;
      }

      if(!depleted){
        document.getElementById('yearsResult').textContent = 'Not depleted within ' + maxYears + ' years';
        document.getElementById('yearsRounded').textContent = 'Not depleted';
      }

      document.getElementById('results').classList.add('show');
      document.getElementById('results').scrollIntoView({behavior:'smooth'});
    });
  </script>
