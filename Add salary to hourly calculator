    <script>
        function showCalculator(type) {
            // Toggle buttons
            document.querySelectorAll('.toggle-btn').forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');
            
            // Toggle calculators
            document.querySelectorAll('.calculator-section').forEach(section => section.classList.remove('active'));
            if (type === 'salary') {
                document.getElementById('salaryCalc').classList.add('active');
            } else {
                document.getElementById('hourlyCalc').classList.add('active');
            }
            
            // Hide results
            document.getElementById('results').classList.remove('show');
        }
        
        function formatCurrency(amount) {
            return '$' + amount.toFixed(2).replace(/\B(?=(\d{3})+(?!\d))/g, ',');
        }
        
        function displayResults(hourlyRate, hoursPerWeek, weeksPerYear) {
            const hoursPerYear = hoursPerWeek * weeksPerYear;
            const annualSalary = hourlyRate * hoursPerYear;
            const dailyPay = hourlyRate * 8; // Assuming 8-hour workday
            const weeklyPay = hourlyRate * hoursPerWeek;
            const monthlyPay = annualSalary / 12;
            
            // Display main result
            document.getElementById('mainResult').textContent = formatCurrency(annualSalary);
            document.getElementById('resultDescription').textContent = 'Annual Salary';
            
            // Display breakdown cards
            document.getElementById('hourlyValue').textContent = formatCurrency(hourlyRate);
            document.getElementById('dailyValue').textContent = formatCurrency(dailyPay);
            document.getElementById('weeklyValue').textContent = formatCurrency(weeklyPay);
            document.getElementById('monthlyValue').textContent = formatCurrency(monthlyPay);
            
            // Display table
            const tableBody = document.getElementById('breakdownTable');
            tableBody.innerHTML = `
                <tr>
                    <td><strong>Hourly</strong></td>
                    <td>${formatCurrency(hourlyRate)}</td>
                    <td>1 hour</td>
                </tr>
                <tr>
                    <td><strong>Daily (8 hours)</strong></td>
                    <td>${formatCurrency(dailyPay)}</td>
                    <td>8 hours</td>
                </tr>
                <tr>
                    <td><strong>Weekly</strong></td>
                    <td>${formatCurrency(weeklyPay)}</td>
                    <td>${hoursPerWeek} hours</td>
                </tr>
                <tr>
                    <td><strong>Bi-Weekly</strong></td>
                    <td>${formatCurrency(weeklyPay * 2)}</td>
                    <td>${hoursPerWeek * 2} hours</td>
                </tr>
                <tr>
                    <td><strong>Monthly</strong></td>
                    <td>${formatCurrency(monthlyPay)}</td>
                    <td>${Math.round(hoursPerYear / 12)} hours</td>
                </tr>
                <tr>
                    <td><strong>Annual</strong></td>
                    <td>${formatCurrency(annualSalary)}</td>
                    <td>${hoursPerYear} hours</td>
                </tr>
            `;
            
            // Show results
            document.getElementById('results').classList.add('show');
            document.getElementById('results').scrollIntoView({ behavior: 'smooth', block: 'nearest' });
        }
        
        // Salary to Hourly
        document.getElementById('salaryForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const annualSalary = parseFloat(document.getElementById('annualSalary').value);
            const hoursPerWeek = parseFloat(document.getElementById('hoursPerWeek').value);
            const weeksPerYear = parseFloat(document.getElementById('weeksPerYear').value);
            
            const hoursPerYear = hoursPerWeek * weeksPerYear;
            const hourlyRate = annualSalary / hoursPerYear;
            
            displayResults(hourlyRate, hoursPerWeek, weeksPerYear);
        });
        
        // Hourly to Salary
        document.getElementById('hourlyForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const hourlyRate = parseFloat(document.getElementById('hourlyRate').value);
            const hoursPerWeek = parseFloat(document.getElementById('hoursPerWeek2').value);
            const weeksPerYear = parseFloat(document.getElementById('weeksPerYear2').value);
            
            displayResults(hourlyRate, hoursPerWeek, weeksPerYear);
        });
    </script>
