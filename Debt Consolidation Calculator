  <script>
    // Utility: currency formatting
    function fmt(v){return '$' + Number(v).toLocaleString(undefined,{minimumFractionDigits:2,maximumFractionDigits:2})}

    // Dynamic debt row creation
    const debtsContainer = document.getElementById('debtsContainer');
    const addDebtBtn = document.getElementById('addDebt');

    function createDebtRow(balance='', apr='', currentPayment=''){
      const wrapper = document.createElement('div');
      wrapper.className = 'debt-row';
      wrapper.style.marginBottom = '12px';
      wrapper.innerHTML = `
        <div style="display:flex;gap:8px;align-items:center">
          <input class="bal" type="number" step="0.01" placeholder="Balance (e.g. 2500)" value="${balance}" required />
          <input class="apr" type="number" step="0.01" placeholder="APR % (e.g. 19.99)" value="${apr}" required />
          <input class="curpay" type="number" step="0.01" placeholder="Current monthly payment (optional)" value="${currentPayment}" />
          <button type="button" class="btn remove">Remove</button>
        </div>
      `;
      debtsContainer.appendChild(wrapper);

      wrapper.querySelector('.remove').addEventListener('click', ()=>wrapper.remove());
    }

    // start with 2 empty rows
    createDebtRow(); createDebtRow();

    addDebtBtn.addEventListener('click', ()=>createDebtRow());

    // Calculation logic
    document.getElementById('debtForm').addEventListener('submit', function(e){
      e.preventDefault();

      const rows = Array.from(document.querySelectorAll('.debt-row'));
      let totalPrincipal = 0;
      let currentMonthlyTotal = 0;

      rows.forEach(r=>{
        const bal = parseFloat(r.querySelector('.bal').value) || 0;
        const apr = parseFloat(r.querySelector('.apr').value) || 0;
        const curpay = parseFloat(r.querySelector('.curpay').value) || 0;
        totalPrincipal += bal;
        currentMonthlyTotal += curpay;
      });

      const aprConsol = parseFloat(document.getElementById('consolRate').value);
      const termYears = parseFloat(document.getElementById('consolTerm').value);
      if(!aprConsol || !termYears || totalPrincipal <= 0){
        alert('Please add debts and enter consolidation rate & term.');
        return;
      }

      const monthlyRate = (aprConsol/100)/12;
      const numPayments = termYears * 12;

      // Monthly payment formula
      const monthlyPayment = (monthlyRate === 0)
        ? totalPrincipal / numPayments
        : totalPrincipal * (monthlyRate * Math.pow(1+monthlyRate, numPayments)) / (Math.pow(1+monthlyRate, numPayments) - 1);

      const totalPaid = monthlyPayment * numPayments;
      const totalInterest = totalPaid - totalPrincipal;

      // Update UI
      document.getElementById('totalPrincipal').textContent = fmt(totalPrincipal);
      document.getElementById('consolMonthly').textContent = fmt(monthlyPayment);
      document.getElementById('totalPaid').textContent = fmt(totalPaid);
      document.getElementById('totalInterest').textContent = fmt(totalInterest);

      document.getElementById('currentMonthly').textContent = fmt(currentMonthlyTotal);
      const savings = currentMonthlyTotal - monthlyPayment;
      document.getElementById('monthlySavings').textContent = (savings>0) ? fmt(savings) : fmt(0);

      // Build amortization (first 12 months)
      let balance = totalPrincipal;
      const amortBody = document.getElementById('amortBody');
      amortBody.innerHTML = '';
      for(let m=1;m<=12 && m<=numPayments;m++){
        const interest = balance * monthlyRate;
        const principal = monthlyPayment - interest;
        balance -= principal;
        const tr = document.createElement('tr');
        tr.innerHTML = `<td>${m}</td><td>${fmt(principal)}</td><td>${fmt(interest)}</td><td>${fmt(Math.max(balance,0))}</td>`;
        amortBody.appendChild(tr);
      }

      document.getElementById('results').classList.add('show');
      document.getElementById('results').scrollIntoView({behavior:'smooth'});
    });
  </script>
